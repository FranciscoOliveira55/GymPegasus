@model FrontEndWeb.Models.DTOs.UserLoginDTO

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<h4>UserLoginDTO</h4>
<hr />
<div class="genericCardContainer">
            <form method="post" asp-meth asp-action="Login">

    <div class="genericCardItem flexCenterRow">
            <div class="genericCardItem flexCenterColumn">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" type="password"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="genericCardItem flexCenterColumn">
                    <p>(Email: user1@gmail.com)</p>
                    <p>(Password: string)</p>
            </div>
      </div>


            <div class="form-group genericCardItem flexCenterColumn">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
