@model FrontEndWeb.Models.DTOs.UserQueryDTO

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div style="display:flex; flex-direction:row">
    @await Html.PartialAsync("Partial/_ProfileNavigationMenu")

    <div>
        <h1>MyAccount</h1>
        <h4>Edit Profile</h4>

        <hr />

        <form asp-action="EditProfile" asp-route-postActionName="Profile">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" class="form-control" />

            <table class="table">
                <tbody>
                    <tr>
                        <th>
                            <label asp-for="UserName" class="control-label"></label>
                        </th>
                        <td>
                            <input asp-for="UserName" class="form-control" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <th>
                            <label asp-for="Email" class="control-label"></label>
                        </th>
                        <td>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <th>
                            <label asp-for="PhoneNumber" class="control-label"></label>
                        </th>
                        <td>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </td>
                    </tr>
                </tbody>
            </table>
            <div style="display:flex-row">
                <a asp-controller="User" asp-action="Profile" class="btn btn-primary widerBtn">Back</a>
                <input type="submit" value="Save" class="btn btn-primary widerBtn" />
            </div>
        </form>
    </div>
</div>

